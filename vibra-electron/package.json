{
  "name": "vibra-app",
  "version": "1.0.0",
  "description": "Vibra - YouTube Player and Node Network",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.yourdomain.vibra",
    "mac": {
      "category": "public.app-category.video"
