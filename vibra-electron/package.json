    },
    "linux": {
      "target": "AppImage"
    }
  },
  "author": "Your Name",
  "license": "ISC",
  "devDependencies": {
    "electron": "^13.0.0",
    "electron-builder": "^22.11.7"
  },
  "dependencies": {
    "ws": "^7.4.6"
  }
}